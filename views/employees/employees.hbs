<section class="container employees">
  {{#if employees}}
    <div class="filter-container">
      <button class="circle-btn" id="btn-filter">
        <i class="bi bi-search"></i>
      </button>
      <div class="filter-content">
        <input
          class="form-control form-control-sm"
          type="text"
          id="input-filter"
          placeholder="Nombre del empleado"
        />
      </div>
    </div>
    <div class="title-container">
      <h2 class="text-center">Lista de empleados</h2>
      <div class="title-line"></div>
    </div>
  {{else}}
    <div class="no-employees">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        class="mb-1"
      >
        <path
          fill="currentColor"
          d="M12 4a4 4 0 0 1 4 4c0 1.95-1.4 3.58-3.25 3.93L8.07 7.25A4.004 4.004 0 0 1 12 4m.28 10l6 6L20 21.72L18.73 23l-3-3H4v-2c0-1.84 2.5-3.39 5.87-3.86L2.78 7.05l1.27-1.27L12.28 14M20 18v1.18l-4.86-4.86C18 14.93 20 16.35 20 18Z"
        >
        </path>
      </svg>
      <h2>No hay empleados registrados</h2>
      <div class="text-center mt-2">
        <a
          href="/employees/admin-employees"
          class="btn btn-warning main-btn main-btn-primary"
        >Administrar empleados</a>
      </div>
    </div>
  {{/if}}
  <div class="no-employees filtered" style="display: none;">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      class="mb-1"
    >
      <path
        fill="currentColor"
        d="M12 4a4 4 0 0 1 4 4c0 1.95-1.4 3.58-3.25 3.93L8.07 7.25A4.004 4.004 0 0 1 12 4m.28 10l6 6L20 21.72L18.73 23l-3-3H4v-2c0-1.84 2.5-3.39 5.87-3.86L2.78 7.05l1.27-1.27L12.28 14M20 18v1.18l-4.86-4.86C18 14.93 20 16.35 20 18Z"
      >
      </path>
    </svg>
    <h2>No hay empleados que cumplan con el filtro</h2>
  </div>
  <div class="grid-container">
    {{#each employees}}
      <div class="card employee-card mx-auto mb-3">
        <img
          src="/assets/images/uploaded/{{this.imgPath}}"
          class="card-img-top"
          alt="{{this.name}}"
        />
        <div class="card-body d-flex flex-column justify-content-between">
          <h4 class="card-title text-center text-capitalize">
            {{this.name}}
            {{this.lastName}}
          </h4>
          <hr class="mb-4" />
          <p class="card-text">
            <strong>Posición:</strong>
            {{this.jobPosition}}
          </p>
          <p class="card-text">
            <strong>Teléfono:</strong>
            {{this.phone}}
          </p>
          <div class="text-center mt-4">
            <a
              href="employees/employee-details/{{this.id}}"
              class="btn btn-warning main-btn main-btn-primary w-50"
            >Detalles</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>